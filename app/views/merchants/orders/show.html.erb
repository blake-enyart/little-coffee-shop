<h1>Order Number: <%= @order.id %></h1>
<h3>Customer Name: <%= @order.user.name %></h3>
<h3>Customer Address:</h3>
<p><%= @order.user.street %></p>
<p><%= @order.user.city %>, <%= @order.user.state %></p>
<section id='item-container'>
  <% @merchant_items.each do |item| %>
  <section id='item-card-<%= item.id %>'>
    <%= link_to item.name, item_path(item) %>
    <img src=<%= item.image_url %> alt=<%= item.name %>>
    <p>Item Price: <%= @merchant_order_items.where(item_id: item.id)[0].order_price %></p>
    <p>Quantity: <%= @merchant_order_items.where(item_id: item.id)[0].quantity %></p>
  </section>
  <% end %>
</section>
