<h1>Edit Item</h1>

<%= form_for @item, url: edit_item_path do |f| %>
 <%= f.label(:name)%>
 <%= f.text_field(:name )%>
 <%= f.label( :description)%>
 <%= f.text_field( :description) %>
 <%= f.label( :image_url)%>
 <%= f.text_field( :image_url) %>
 <%= f.label( :quantity)%>
 <%= f.number_field(:quantity) %>
 <%= f.label(:price)%>
 <%= f.number_field(:price) %>
 <%= f.submit("Save Changes") %>
<% end  %>
