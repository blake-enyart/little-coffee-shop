

<!DOCTYPE html>
<html>
  <head>
    <title>LittleCoffeeShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

  <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to "Home", root_path %>
      <%= link_to "Items", items_path %>
      <%= link_to "Merchants", merchants_path %>

      <% unless merchant_user? || admin_user? %>
        <%= link_to "Cart", cart_path %>: <%= @cart.total_count %>
      <% end %>

      <% unless current_user %>
        <%= link_to "Login", login_path %>
        <%= link_to "Register", new_user_path %>
      <% end %>

      <% if current_user %>
        <%= link_to "Logout", logout_path %>
      <% end %>

      <% if current_reguser? %>
        <%= link_to "Profile", profile_path %>
        <section>Logged in as <%= current_user.name %> </section>
      <% elsif merchant_user? %>
        <%= link_to "Dashboard", dashboard_path %>
      <% elsif admin_user? %>
        <%= link_to "Dashboard", admin_dashboard_path %>
        <%= link_to 'Users', admin_users_path %>
      <% end %>
    </nav>

    <% flash.each do |type, message| %>
    <%= content_tag :div, message, class: type %>
    <% end %>
    <div class="container-fluid yield">
       <%= yield %>
    </div>
  </body>
</html>
