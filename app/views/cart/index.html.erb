<h1>Cart</h1>

<% @cart.items.each do |item, quantity| %>
  <section id="cart-item-<%= item.id %>">
    <ul>
      <li><%= link_to item.name, item_path(item) %></li>
      <li><%= link_to image_tag(item.image_url, alt: "Image of #{item.name}"), item_path(item) %></li>
      <li><%= item.user.name %></li>
      <li>$<%= item.price.round(2) %></li>
      <li>Quantity: <%= quantity %></li>
      <li><%= link_to "+", increment_item_path(item) %></li>
      <li><%= link_to "-", decrement_item_path(item) %></li>
      <li>Subtotal: <%= item.subtotal(quantity).round(2) %></li>
      <li><%= link_to "Remove", remove_item_path(item) %></li>
    </ul>
  </section>
<% end %>


<% unless @cart.empty? %>
  Grand Total: $<%= @cart.grand_total.round(2) %>
  <%= link_to "Empty Cart", empty_cart_path %>
<% end %>
