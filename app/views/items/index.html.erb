<% @items.each do |item| %>
  <section id='item-<%= item.id %>'>
    <ul>
      <li><%= link_to item.name, item_path(item) %></li>
      <li><%= link_to image_tag(item.image_url, alt: "Image of #{item.name}"), item_path(item) %></li>
      <li><%= item.user.name %></li>
      <li>In stock: <%= item.quantity %></li>
      <li>$<%= item.price.round(2) %></li>
    </ul>
  </section>
<% end %>
